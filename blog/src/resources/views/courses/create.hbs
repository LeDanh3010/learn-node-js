<div class="mt4">
    <h3>{{title}}</h3>
    <form method="{{method}}" action="{{action}}">
        <div class="form-group">
            <label for="name">Name Course</label>
            <input type="text" class="form-control" id="name" value="{{#if nameValue}}{{nameValue}}{{/if}}" name="name">
        </div>
        <div class="form-group">
            <label for="description">Des course</label>
            {{#if isTextArea}}
            <textarea class="form-control" id="description" name="description">{{content}}</textarea>
            {{else}}
            <input type="text" class="form-control" id="description" value="{{#if desValue}}{{desValue}}{{/if}}"
                name="description">
            {{/if}}
        </div>
        <div class="form-group">
            <label for="videoId">VideoId</label>
            <input type="text" class="form-control" id="videoId" value="{{#if videoValue}}{{videoValue}}{{/if}}"
                name="videoId">
        </div>
        <div class="form-group">
            <label for="level">Level</label>
            <input type="text" class="form-control" id="level" value="{{#if levelValue}}{{levelValue}}{{/if}}"
                name="level">
        </div>
        <button type="submit" class="btn btn-primary">{{nameButton}}</button>
    </form>
</div>